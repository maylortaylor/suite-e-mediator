{
  "social_media": {
    "name": "Social Media Optimized",
    "description": "Optimized for Instagram, Facebook, and other social platforms",
    "processing": {
      "image": {
        "enhancement_level": "medium",
        "target_platform": "instagram",
        "maintain_aspect": false,
        "jpeg_quality": 82
      },
      "video": {
        "operation": "social_media",
        "platform": "instagram",
        "quality_level": "standard"
      },
      "raw": {
        "preset": "web_optimized",
        "output_format": "JPEG",
        "quality": 85
      }
    },
    "watermark": {
      "enabled": true,
      "style": "social_media",
      "position": "bottom_right"
    },
    "output": {
      "create_subdirectories": true,
      "directory_structure": "social_media/{platform}/{date}",
      "filename_template": "{event_name}_social_{counter:03d}"
    }
  },

