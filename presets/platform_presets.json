{
  "social_media": {
    "name": "Social Media Optimized",
    "description": "Optimized for Instagram, Facebook, and other social platforms",
    "processing": {
      "image": {
        "enhancement_level": "medium",
        "target_platform": "instagram",
        "maintain_aspect": false,
        "jpeg_quality": 82,
        "format": "JPEG",
        "enhance": true
      },
      "video": {
        "operation": "social_media",
        "platform": "instagram",
        "quality_level": "standard",
        "max_resolution": [
          1080,
          1080
        ],
        "bitrate": "3000k",
        "fps": 30,
        "codec": "h264",
        "format": "MP4"
      },
      "raw": {
        "preset": "web_optimized",
        "output_format": "JPEG",
        "quality": 85,
        "enhance": true,
        "preserve_original": false
      },
      "audio": {
        "codec": "aac",
        "bitrate": "320k",
        "sample_rate": 44100,
        "channels": 2,
        "volume_normalization": true,
        "enable_loudness_normalization": true,
        "target_lufs": -23.0,
        "max_peak": -1.0,
        "noise_reduction": "light"
      }
    },
    "watermark": {
      "enabled": true,
      "style": "social_media",
      "position": "bottom_right",
      "file": "",
      "opacity": 0.3,
      "margin": 100
    },
    "output": {
      "create_subdirectories": true,
      "directory_structure": "social_media/{platform}/{date}",
      "filename_template": "{event_name}_social_{counter:03d}"
    }
  },
